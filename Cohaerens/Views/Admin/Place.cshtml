@model IEnumerable<Place>

<h3 class="p-2 bg-primary text-white text-center">Список мест</h3>

<div class="container-fluid mt-3">
	<div class="row">
		<div class="col-1 font-weight-bold">Id</div>
		<div class="col font-weight-bold">Name</div>
		<div class="col font-weight-bold">Description</div>
		<div class="col"></div>
	</div>
	<form asp-action="AddPlace" method="post">
		<div class="row p-2">
			<div class="col-1"></div>
			<div class="col"><input name="Name" class="form-control" /></div>
			<div class="col"><input name="Description" class="form-control" /></div>
			<div class="col"><button type="submit" class="btn btn-primary">Add</button></div>
		</div>
	</form>
	<div>
		@if (Model.Count() == 0)
		{
			<div class="row">
				<div class="col text-center p-2">No Data</div>
			</div>
		}
		else
		{
			@foreach (Place p in Model)
			{
				<div class="row p-2">
					<div class="col-1">@p.Id</div>
					<div class="col">@p.Name</div>
					<div class="col">@p.Description</div>
					<div class="col">
						<form asp-action="DeletePlace" method="post">
							<a asp-action="UpdatePlace" asp-route-key="@p.Id" class="btn btn-outline-primary">Edit</a>
							<input type="hidden" name="Id" value="@p.Id" />
							<button type="submit" class="btn btn-outline-danger">Delete</button>
						</form>
					</div>
				</div>
			}
		}
	</div>
</div>

