@model IEnumerable<SysCom>

<h3 class="p-2 bg-primary text-white text-center">Системы связи</h3>

<div class="container-fluid mt-3">
	<div class="row">
		<div class="col-1 font-weight-bold">Id</div>
		<div class="col font-weight-bold">Name</div>
		<div class="col font-weight-bold">Description</div>
		<div class="col"></div>
	</div>
	<form asp-action="AddSysCom" method="post">
		<div class="row p-2">
			<div class="col-1"></div>
			<div class="col"><input name="Name" class="form-control" /></div>
			<div class="col"><input name="Description" class="form-control" /></div>
			<div class="col"><button type="submit" class="btn btn-primary">Add</button></div>
		</div>
	</form>
	<div>
		@if (Model.Count() == 0)
		{
			<div class="row">
				<div class="col text-center p-2">No Data</div>
			</div>
		}
		else
		{
			@foreach (SysCom s in Model)
			{
			<div class="row p-2">
				<div class="col-1">@s.Id</div>
				<div class="col">@s.Name</div>
				<div class="col">@s.Description</div>
				<div class="col">
					<form asp-action="Delete" method="post">
						<a asp-action="UpdateSysCom" asp-route-key="@s.Id" class="btn btn-outline-primary">Edit</a>
						<input type="hidden" name="Id" value="@s.Id" />
						<button type="submit" class="btn btn-outline-danger">Delete</button>
					</form>
				</div>
			</div>
			}
		}
	</div>
</div>

